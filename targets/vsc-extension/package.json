{
  "name": "mcpower",
  "displayName": "MCPower Security",
  "description": "Automatically wraps MCP servers with security policies for enhanced protection",
  "version": "0.0.73",
  "publisher": "mcpower",
  "license": "Apache-2.0",
  "icon": "resources/ext-icon-dark.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MCPower-Security/mcpower-proxy"
  },
  "bugs": {
    "url": "https://github.com/MCPower-Security/mcpower-proxy/issues"
  },
  "homepage": "https://mcpower.tech",
  "categories": [
    "Linters",
    "Machine Learning",
    "Testing"
  ],
  "keywords": [
    "mcp",
    "security",
    "model-context-protocol",
    "ai-safety",
    "ai",
    "agents",
    "coding-agents",
    "llm"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mcpower",
          "title": "MCPower",
          "icon": "resources/activitybar-icon.svg"
        }
      ]
    },
    "views": {
      "mcpower": [
        {
          "id": "mcpower.auditTrail",
          "name": "MCP Monitor"
        }
      ]
    },
    "commands": [
      {
        "command": "mcpower.copyAuditEntry",
        "title": "Copy Entry to Clipboard",
        "icon": "$(copy)"
      },
      {
        "command": "mcpower.copyAuditField",
        "title": "Copy Field to Clipboard",
        "icon": "$(copy)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "mcpower.copyAuditEntry",
          "when": "view == mcpower.auditTrail && viewItem == root",
          "group": "inline"
        },
        {
          "command": "mcpower.copyAuditField",
          "when": "view == mcpower.auditTrail && (viewItem == field || viewItem == field_expandable)",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:uninstall": "node ./dist/uninstall_hook.js",
    "compile:vsc-extension": "cp ../scripts/* scripts/ && tsc -p ./",
    "bundle:vsc-extension": "webpack --mode production",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "package:vsc-extension": "vsce package --allow-star-activation",
    "build:vsc-extension": "npm run compile:vsc-extension && npm run bundle:vsc-extension && npm run package:vsc-extension"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.1",
    "@vscode/vsce": "^3.6.2"
  },
  "dependencies": {
    "@mcpower/common-ts": "file:../common-ts"
  }
}
